@{Layout = "~/Dinamico/Themes/Metro/Views/Shared/_Layout_Modal.cshtml";}

@section main
{
         @if (ViewBag.PasswordChangedSucess)
        {
            
           <div class="note note-success" style="background-color:#EBFCEE">
                        <h2 class="block">Success! Your account has been activated</h2>
                        <p style="color:#666;">
                           Please login using the form below - your username and password can be found in your email.<br /><br />
                            If you have any issues, please feel free to reach out to us at <a href="mailto:support@vauzo.com">support@vauzo.com</a>
                            <br />
                        </p>
                     </div>
         }

        @if (ViewBag.OldPasswordBad)
        {
            
           <div class="alert alert-block alert-error fade in" >
                        <h2 class="block">Whoops!</h2>
                        <p style="color:#666;">
                           Please enter your correct old password<br /><br />
                            If you have any issues, please feel free to reach out to us at <a href="mailto:support@vauzo.com">support@vauzo.com</a>
                            <br />
                        </p>
                     </div>
         }

    @if (ViewBag.PasswordMismatch)
        {
            
           <div class="alert alert-block alert-error fade in" >
                        <h2 class="block">Whoops! New Password must match</h2>
                        <p style="color:#666;">
                           Please ensure that new password and password confirm fields match<br /><br />
                            If you have any issues, please feel free to reach out to us at <a href="mailto:support@vauzo.com">support@vauzo.com</a>
                            <br />
                        </p>
                     </div>
         }
		<!-- BEGIN LOGIN FORM -->
		<form class="form-vertical" action="/login/changepasswordsubmit" method="post">
            @Html.AntiForgeryToken()
			<h3 class="form-title">Change password for @SessionService.Current.UserName</h3>
			<div class="alert alert-error hide">
				<button class="close" data-dismiss="alert"></button>
				<span>Enter your old password for verification</span>
			</div>

            <div class="alert alert-error hide invalid">
				<button class="close" data-dismiss="alert"></button>
				<span>Whoops! Invalid username/password</span>
			</div>


            <div class="alert alert-success success hide spinner">
				<button class="close" data-dismiss="alert"></button>
				<span><b>Success!</b><input type="text" placeholder="Logging you in" class="m-wrap spinner"></span>
			</div>

			<div class="control-group">
				<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
				<label class="control-label visible-ie8 visible-ie9">Old Password</label>
				<div class="controls">
					<div class="input-icon left">
						<i class="icon-lock"></i>
						<input class="m-wrap placeholder-no-fix" type="password" autocomplete="off" placeholder="Old Password" name="oldpassword" id="oldpassword"/>
					</div>
				</div>
			</div>
			<div class="control-group">
				<label class="control-label visible-ie8 visible-ie9">New Password</label>
				<div class="controls">
					<div class="input-icon left">
						<i class="icon-lock"></i>
						<input class="m-wrap placeholder-no-fix" type="password" autocomplete="off" placeholder="New Password" id="password" name="newpassword"/>
					</div>
				</div>
			</div>

            <div class="control-group">
				<label class="control-label visible-ie8 visible-ie9">New Password Confirm</label>
				<div class="controls">
					<div class="input-icon left">
						<i class="icon-lock"></i>
						<input class="m-wrap placeholder-no-fix" type="password" autocomplete="off" placeholder="New Password Confirm" id="newPasswordConfirm" name="passwordconfrim"/>
					</div>
				</div>
			</div>


            <div class="form-actions" style="border-style:none;">
				<button type="submit" class="btn green pull-right">
				Change <i class="m-icon-swapright m-icon-white"></i>
				</button>            
			</div>
			
			
		</form>

}
	